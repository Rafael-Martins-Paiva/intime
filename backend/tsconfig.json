{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "module": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "isolatedModules": false,
    
    "skipLibCheck": true
  },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}